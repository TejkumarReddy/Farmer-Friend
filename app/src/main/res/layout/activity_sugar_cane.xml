<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SugarCaneActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Heading -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best Fertilizers for you"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduction:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp" />

            <!-- Introduction -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Sugar Cane Crop has a lifetime of approximately 1 year. It can be grown in any season. The following are the different stages and fertilizers which suit best for your sugar cane crop."
                android:textSize="18sp"
                android:padding="16dp" />

            <!-- Rest of the content goes here -->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/sss"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:padding="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chemicals"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stage 1:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp" />

            <!-- Germination and Establishment -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="Germination and Establishment Phase(0-60 days):"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="For Sugar cane crop all chemicals needed are NITROGEN(N),PHOSPOROUS(P) and POTASSIUM(K). In all four stages these are only chemicals required but in different ratios."
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="In stage 1 plant requires N:P:K ratio 30:9:9 which means 30kg nitrogen,9kg phosporous and 9 kg potassium is required for 2.47 acres which is eual to one hectare."
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stage 2:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp" />

            <!-- Germination and Establishment -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="Tillerening and canopy Development Phase(60-150 days):"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="In stage 2 plant requires N:P:K ratio 70:32:14 which means 70kg nitrogen,32kg phosporous and 14 kg potassium is required for 2.47 acres which is eual to one hectare."
                android:textSize="15sp" />

            <!-- Germination and Establishment -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:text="Stage 3:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="Grand growth Phase(150-240 days):"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="In stage 3 plant requires N:P:K ratio 100:31:32 which means 100kg nitrogen,31kg phosporous and 32kg potassium is required for 2.47 acres which is eual to one hectare."
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stage 4:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp" />

            <!-- Germination and Establishment -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="Maturing and Ripening Phase(240-360 days):"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="In stage 4 plant requires N:P:K ratio 0:0:37 which means 0kg nitrogen,0kg phosporous and 37 kg potassium is required for 2.47 acres which is eual to one hectare"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fertilizers"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.UREA"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/urea"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:padding="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="1.Nitrogen is supplied to plants through urea.\n 2. Nitrogen influences sugarcane yield and quality.\n 3. It is required for vegetative growth (tillering, foliage formation, stalk formation and growth) and root growth.\n 4. Vegetative growth in sugarcane is directly related to yield.\n Excess nitrogen leads to:\n i.Harmful to crop.\n ii. Prolongs vegetative growth.\n iii. Delays maturity and ripening.\n iv. Decreases sugar content in juice.\n v. Susceptable to lodging,pest and disease incidence. "
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="MRP : Rs.268 /- per 50kg bag"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usage:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="Soil Application of N fertilizer or Foliar Spray of Urea 1.2% twice at weekly interval.\n * Nitrogenous and potassic fertilizers must be applied in four splits.\n i.During 30-45 days ii.During 60-75 days iii.During 90-105 days iv.During 120-135 days.  "
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.DAP(DIAmmonium Phosphate)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dap"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:padding="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="1.Uptake depends on presence of soluble and plant absorbable form.\n 2. P-requirement is relatively less than N and K.\n 3. Necessary for formation of proteins and thus for yield build up.\n 4. Important for cell division leads to crop growth.\n 5. Stimulates root growth.\n 6. Necessary for plant metabolism and photo synthesis.\n 7. Required for adequate tillering.\n 8. Interacts with N and thus enhance ripening.\n 9. Excess P is wasted due to fixation in soil."
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="MRP : Rs.1125 /- per 50kg bag"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usage:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="*.Foliar Spray of DAP 2% twice at fornight interval. "
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. POTASSIUM CHLORIDE(KCl)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/kcl"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:padding="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="1. Requirement of K is greater than N and P \n 2. Important for sugar synthesis.\n 3. Develops resistence to sugarcane against pest,disease and lodging.\n 4. Balances the effect of N and P\n 5. Excess availability of K leads to luxury Consumption."
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="MRP : Rs.3250 /- per 50kg bag"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usage:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="*.Foliar Spray of KCl 1% twice at fornight interval. "
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
